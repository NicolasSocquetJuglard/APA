<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleWhite"
    android:fitsSystemWindows="true"
    android:padding="16dp"
    tools:context=".AnswerNoActivity">

    <TextView
        android:id="@+id/textViewQuestionDenialAPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="@string/question_why_denial"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipDenialBecausePain"
        style="@style/CustomChipStyle"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:checkable="true"
        android:text="@string/denial_because_pain"
        android:textAlignment="center"
        android:textSize="30sp"
        app:chipIcon="@drawable/emoji_hurted"
        app:chipIconSize="32dp"
        app:chipIconVisible="true"
        app:iconStartPadding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/chipDenialBecauseFatigue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewQuestionDenialAPA"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="VisualLintButtonSize,TextSizeCheck" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipDenialBecauseFatigue"
        style="@style/CustomChipStyle"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:checkable="true"
        android:text="@string/denial_because_fatigue"
        android:textAlignment="center"
        android:textSize="30sp"
        app:chipIcon="@drawable/emoji_fatigue"
        app:chipIconSize="32dp"
        app:chipIconVisible="true"
        app:iconStartPadding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/chipDenialBecauseMotivation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipDenialBecausePain"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="VisualLintButtonSize" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipDenialBecauseMotivation"
        style="@style/CustomChipStyle"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:checkable="true"
        android:text="@string/denial_because_motivation"
        android:textAlignment="center"
        android:textSize="30sp"
        app:chipIcon="@drawable/emoji_depressed"
        app:chipIconSize="32dp"
        app:chipIconVisible="true"
        app:iconStartPadding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/chipDenialBecauseTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipDenialBecauseFatigue"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="VisualLintButtonSize" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipDenialBecauseTime"
        style="@style/CustomChipStyle"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:checkable="true"
        android:text="@string/denial_because_time"
        android:textAlignment="center"
        android:textSize="30sp"
        app:chipIcon="@drawable/emoji_time"
        app:chipIconSize="32dp"
        app:chipIconVisible="true"
        app:iconStartPadding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/chipDenialBecauseOther"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipDenialBecauseMotivation"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="VisualLintButtonSize" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipDenialBecauseOther"
        style="@style/CustomChipStyle"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_marginBottom="80dp"
        android:checkable="true"
        android:text="@string/denial_because_other"
        android:textAlignment="center"
        android:textSize="30sp"
        app:chipIcon="@drawable/emoji_other"
        app:chipIconSize="32dp"
        app:chipIconVisible="true"
        app:iconStartPadding="16dp"
        app:layout_constraintBottom_toTopOf="@id/buttonFromQuestionnaireToHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipDenialBecauseTime"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/buttonConfirmQuestionnaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_confirm"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonFromQuestionnaireToHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonFromQuestionnaireToHome" />

    <Button
        android:id="@+id/buttonFromQuestionnaireToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/blue2"
        android:text="@string/label_return"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonConfirmQuestionnaire"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>